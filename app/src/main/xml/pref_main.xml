<?xml version="1.0" encoding="utf-8"?>
    
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  
  <PreferenceCategory android:title="@string/pref_header_general">
        
    <CheckBoxPreference
      android:defaultValue="false"
      android:key="@string/pref_key_auto_update"
      android:summary="@string/pref_summary_auto_update"
      android:title="@string/pref_title_auto_update" />

    <ListPreference
      android:defaultValue="0"
      android:dialogTitle="@string/pref_title_theme"
      android:entries="@array/pref_theme_entries"
      android:entryValues="@array/pref_theme_values"
      android:key="@string/pref_key_theme"
      android:summary="@string/pref_summary_theme"
      android:title="@string/pref_title_theme" />

  </PreferenceCategory>

  <PreferenceCategory android:title="@string/pref_header_about">

    <Preference
      android:key="@string/pref_key_privacy_policy"
      android:title="@string/pref_title_privacy_policy"
      android:summary="@string/url_privacy_policy">
      <intent
        android:action="android.intent.action.VIEW"
        android:data="@string/url_privacy_policy" />
    </Preference>

    <Preference
      android:key="@string/pref_key_terms"
      android:title="@string/pref_title_terms"
      android:summary="@string/url_terms">
      <intent
        android:action="android.intent.action.VIEW"
        android:data="@string/url_terms" />
    </Preference>

    <Preference
      android:key="@string/pref_key_faq"
      android:title="@string/pref_title_faq"
      android:summary="@string/url_faq">
      <intent
        android:action="android.intent.action.VIEW"
        android:data="@string/url_faq" />
    </Preference>
        
  </PreferenceCategory>

</PreferenceScreen>
